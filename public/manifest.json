{
  "manifest_version": 3,
  "name": "YouTube Farsi Subtitle",
  "version": "1.0.0",
  "description": "Capture YouTube audio and generate Farsi subtitles in real-time.",

  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.youtube.com/*"
  ],

  "background": {
    "service_worker": "background/index.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/index.js"]
    }
  ],

  "action": {
    "default_popup": "popup/index.html",
    "default_title": "YouTube Farsi Subtitle"
  },

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
