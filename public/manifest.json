{
  "manifest_version": 3,
  "name": "YouTube Farsi Subtitle",
  "version": "1.0.0",
  "description": "Capture YouTube audio and show Farsi subtitles.",

  "permissions": ["scripting", "tabs"],

  "background": {
    "service_worker": "src/background/index.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content/index.js"]
    }
  ],

  "action": {
    "default_popup": "src/popup/index.html"
  }
}
