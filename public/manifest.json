{
  "manifest_version": 3,
  "name": "YouTube Farsi Subtitle",
  "version": "1.0.0",
  "description": "Capture YouTube audio and generate Farsi subtitles in real-time.",

  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.youtube.com/*"
  ],

 "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/index.js"]
    }
  ],

  "action": {
    "default_popup": "popup/index.html",
    "default_title": "YouTube Farsi Subtitle"
  }

  
}
